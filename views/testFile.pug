doctype html
head
  meta(charset='UTF-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  link(rel='stylesheet' href='../bootstrap/css/bootstrap.css')
  script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js' integrity='sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3' crossorigin='anonymous')
  link(rel='stylesheet' href='../stylesheet.css')
  title Register FarmerOne
aside.sidebar
  .col-auto.col-md-3.col-xl-2.px-sm-2.px-0
    .d-flex.flex-column.align-items-center.align-items-sm-start.px-3.pt-2.text-white.min-vh-100
      div
        img.sidebar-logo(src='../images/s-wlogo2.png' alt='Ufarm Logo')
      hr.mb-3.mt-4(width='225px' color='#2F6A3F')
      .sidebar-list-container
        ul.nav.flex-column.mb-sm-auto.mb-0.align-items-center.align-items-sm-start.sidebar-list(id='')
          li.nav-item.intext.mb-4
            a(href='AO-dashboard.html') Dashboard
          li.nav-item.sidebar-header.p-0.intext
            strong FARMERONE MANAGEMENT
          hr.m-0(width='225px' color='#2F6A3F')
          li.nav-item.pt-4.intext
            a(href='ward.html') Wards
          li.nav-item.intext
            a(href='AO-fo-accounts.html') Accounts
          li.nav-item.intext.mb-4
            a(href='AO-fo-activities.html') Activities
          li.nav-item.sidebar-header.p-0.intext
            strong ACCOUNTS
          hr.m-0(width='225px' color='#2F6A3F')
          li.nav-item.pt-4.intext My account
          li.nav-item.intext Users
main.content
  nav.navbar.navbar-expand-lg.shadow.p-2.mb-3.bg-white.bottom-shadow
    .container-fluid
      a.navbar-brand.text-dark(href='#') Register New FarmerOne
      button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation')
        span.navbar-toggler-icon
      #navbarSupportedContent.collapse.navbar-collapse
        ul.navbar-nav.me-auto.mb-2.mb-lg-0.ml-auto
          li.nav-item.dropdown(style='margin-left: auto')
            a.nav-link.dropdown-toggle.text-secondary(href='#' role='button' data-bs-toggle='dropdown' aria-expanded='false')
              | Agricultural Officer
            ul.dropdown-menu
              li
                a.dropdown-item(href='#') Profile
              li
                a.dropdown-item(href='#')
              li
                a.dropdown-item(href='#') Signout
  .container-fluid.form-style
    .logo-div
      img.user-logo.mb-2(src='../images/logo.png' alt='Ufarm logo')
    form#registerFO.form(action='/' name='registration' method='post')
      h5.text-muted.text-center Add FarmerOne Details
      hr
      .row
        .col
          .form-field
            label(for='firstname')
              | First Name:
              small.asterisk  *
            input#firstname(type='text' name='firstname' autocomplete='off')
            .error
        .col
          .form-field
            label(for='lastname')
              | Last Name:
              small.asterisk  *
            input#lastname(type='text' name='lastname' autocomplete='off')
            .error
        .col
          .form-field
            label(for='uniquenumber')
              | Unique Number:
              small.asterisk  *
            input.text-muted(type='text' name='uniquenumber' id='' autocomplete='off' value='forexample MW1-001')
            .error
        .col
          .form-field
            label(for='role') Role
            select(name='role' id='')
              option(value='ug') Assign a role to this farmerOne
              option(value='ug') farmerOne
            .error
      .row
        .col
          .form-field
            label(for='ninnumber')
              | NIN Number:
              small.asterisk  *
            input#ninnumber(type='text' name='ninnumber' autocomplete='off')
            .error
        .col
          .form-field
            label(for='phonenumber')
              | Phone Number:
              small.asterisk  *
            input#phonenumber(type='text' name='phonenumber' autocomplete='off')
            .error
        .col
          .form-field
            label(for='ward') Ward:
            select(name='ward' id='')
              option(value='ug') Appoint a ward to this farmerOne
              option(value='ug') Ward 1
              option(value='ke') Ward 2
              option(value='tz') Ward 3
              option(value='tz') Ward 4
            .error
        .col
          .form-field
            label(for='residenttype') Resident Type:
            select(name='residenttype' id='')
              option(value='ug') Select Resident Type
              option(value='ug') Permanent
              option(value='ke') Temporary
            .error
      .row
        .col
          .form-field
            label(for='periodofstay') Period of Stay:
            select(name='periodofstay' id='')
              option(value='ug') Select Period of Stay
              option(value='ug') 9
              option(value='ke') 10
              option(value='tz') 11
            .error
        .col
          .form-field
            label(for='regdate')
              | Date of Registration:
              small.asterisk  *
            input#regdate(type='date' name='regdate' autocomplete='off')
            .error
        .col
          .form-field
            label(for='birthdate')
              | Date of Bith
              small.asterisk  *
            input#birthdate(type='date' name='birthdate' autocomplete='off')
            .error
        .col
          .form-field
            label(for='gender') Gender:
            .radio
              input#gender1(type='radio' name='gender' autocomplete='off' checked='')
              span Female
              input#gender2(type='radio' name='gender' autocomplete='off')
              span Male
              input#gender3(type='radio' name='gender' autocomplete='off')
              span Others
            .error
      hr.mt-1
      p.text-muted Add FarmerOne&apos;s Direction Coordinates
      .row
        .col.column-stretch-left
          .form-field
            label(for='streetname')
              | Street Name:
              small.asterisk  *
            input#streetname(type='text' name='streetname' autocomplete='off')
            .error
        .col
          .form-field
            label(for='housenumber')
              | House Number:
              small.asterisk  *
            input#housenumber(type='text' name='housenumber' autocomplete='off')
            .error
        .col-6
          .form-field
            label(for='gender') Activities:
            .activity
              input#register.checkbox-size(type='checkbox' name='horticulture' autocomplete='off' value='eng' checked='')
              span.check-box-tex Horticulture
              input#inspect.checkbox-size(type='checkbox' name='produce' autocomplete='off' value='lug')
              span.check-box-tex Produce
              input#approve.checkbox-size(type='checkbox' name='poultry' autocomplete='off' value='kiswa')
              span.check-box-tex  Poultry
              input#approve.checkbox-size(type='checkbox' name='dairyproducts' autocomplete='off' value='kiswa')
              span.check-box-tex Dairy Products 
      .container.FO-form-btn
        .button1
          button.btn.btn-primary.mt-1.form-add-btn.mr-auto(type='submit') Add New
        .button1
          button.btn.btn-primary.mt-1.ml-4.form-clear-btn.mr-auto(type='' style='width: 120px') Clear
  .footer
    small.mt-4.ml-5 &copy; Refactory Cohort 12
